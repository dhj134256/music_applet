/* pages/musicList/musicList.wxss */
.wrap{
  width: 100%;
  height: 480rpx;
  position: relative;
}
.hd_img{
  width: 100%;
}
.title{
  width: 100%;
  display: block;
  /* height: 60rpx; */
  line-height: 60rpx;
  text-align: center;
  background: rgba(0, 0, 0, .6);
  margin-top: 0;
  position: absolute;
  bottom: 0;
  color: #fff;
}
.play_all{
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  background: #eee;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
  margin-top: 0;
}
