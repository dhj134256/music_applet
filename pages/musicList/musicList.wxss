.list{
  height: 120rpx;
  background: #eee;
  border-bottom: 2rpx solid #ddd;
}
.list1{
  height: 120rpx;
  background: #fff;
  border-bottom: 2rpx solid #ddd;
}
.song_id{
  width: 10%;
  height: 100%;
  line-height: 120rpx;
  font-weight: bold;
  float: left;
  text-align: center;
}
.song_info{
  width: 70%;
  height: 100%;
  float: left;
  padding-left: 60rpx;
  box-sizing: border-box;
}
.song_info view:first-child{
  height: 60%;
  line-height: 72rpx;
  font-size: 36rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.song_info view:last-child{
  height: 40%;
  line-height: 48rpx;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.song_pic{
  width: 20%;
  height: 120rpx;
  float: left;
}
.song_pic image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  /* background: #000; */
  margin: 10rpx 25rpx;
}
.controller{
  width: 100%;
  height: 140rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  background: #fff;
  align-items: center;
  border-top: 2rpx solid #ddd;
}
.controller image{
  /* flex: 1.5; */
  width: 100rpx;
  height: 100rpx;
  margin-left: 10rpx;
}
.controller  .btn_play{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.controller .songName{
  flex: 7;
  padding-left: 40rpx;
}
.box{
  padding-bottom: 140rpx;
}